<div id="cookie-banner" class="fixed bottom-6 left-6 right-6 md:left-auto md:max-w-sm z-100 transform translate-y-[150%] transition-transform duration-700 ease-out">
    <div class="bg-black/80 backdrop-blur-xl border border-white/10 p-6 rounded-2xl shadow-[0_20px_50px_rgba(0,0,0,0.5)]">
        <div class="flex items-center gap-3 mb-4">
            <div class="w-2 h-2 rounded-full bg-gold animate-pulse"></div>
            <h3 class="text-white uppercase tracking-[0.2em] text-[10px] font-medium">Cookie Privacy</h3>
        </div>
        
        <p class="text-gray-400 text-[11px] leading-relaxed tracking-wide mb-6">
            We use cookies to enhance your experience and analyze our traffic. By clicking <span class="text-white italic">"Accept"</span>, you agree to our use of cookies.
        </p>

        <div class="flex flex-col gap-3">
            <button id="accept-cookies" class="w-full py-3 bg-white text-black text-[10px] uppercase tracking-[0.2em] font-bold rounded-lg hover:bg-gold hover:text-black transition-colors duration-300">
                Accept All
            </button>
            <a href="/cookies" class="text-center text-gray-500 text-[9px] uppercase tracking-widest hover:text-white transition-colors">
                Read Policy
            </a>
        </div>
    </div>
</div>

<script>
    const banner = document.getElementById('cookie-banner');
    const acceptBtn = document.getElementById('accept-cookies');

    // Check if user already accepted
    if (!localStorage.getItem('cookies-accepted')) {
        setTimeout(() => {
            banner?.classList.remove('translate-y-[150%]');
        }, 1000);
    }

    acceptBtn?.addEventListener('click', () => {
        localStorage.setItem('cookies-accepted', 'true');
        banner?.classList.add('translate-y-[150%]');
    });
</script>