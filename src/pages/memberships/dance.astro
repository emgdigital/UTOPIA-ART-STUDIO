<MainLayout title="Dance Memberships | Utopia">

    <main class="relative min-h-screen max-w-7xl mx-auto px-6 py-24 z-10">
        
        <a href="/memberships" class="inline-flex items-center text-gray-500 hover:text-gold transition-colors mb-12 group uppercase text-[10px] tracking-[0.3em]">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 group-hover:-translate-x-1 transition-transform"><path d="m15 18-6-6 6-6"/></svg>
            Back to Passes
        </a>

        <div class="text-center mb-20">
            <h1 class="font-thin tracking-[0.4em] uppercase text-white mb-4 text-2xl md:text-3xl">
                DANCE <span class="text-gold italic">PASSES</span>
            </h1>
            <div class="h-px w-24 bg-[#0F393D] mx-auto mt-6 opacity-60"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {tiers.map((tier) => (
                <div class="bg-[#0a0a0a] p-8 rounded-[40px_5px_40px_5px] border border-[#0F393D]/30 shadow-[0_0_20px_rgba(15,57,61,0.1)] transition-all duration-500 hover:shadow-[0_0_40px_rgba(15,57,61,0.4)] hover:-translate-y-2 group flex flex-col justify-between">
                    
                    <div>
                        <h3 class="text-gold text-[16px] uppercase tracking-[0.3em] mb-8 font-thin text-center border-b border-white/5 pb-6">
                            {tier.name}
                        </h3>

                        <div class="flex items-center justify-center font-thin mb-10">
                            <div class="mr-4 text-gold opacity-40">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="rotate-[-15deg]">
                                    <path d="M2 9V5.2a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2V9a2 2 0 0 0 0 6v3.8a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V15a2 2 0 0 0 0-6z"></path>
                                    <path d="M15 3v18"></path>
                                </svg>
                            </div>
                            
                            <div class="flex items-baseline">
                                <span class="text-2xl md:text-3xl text-white font-light">{tier.price}</span>
                                <span class="text-[10px] text-gray-500 uppercase tracking-widest ml-2">/ month</span>
                            </div>
                        </div>
                    
                        <div class="space-y-6 mb-10">
                            <div class="flex flex-col">
                                <span class="text-[11px] text-gray-500 uppercase tracking-widest mb-1">Hours Included</span>
                                <span class="text-sm font-light text-white/90">{tier.hours}</span>
                            </div>
                            
                            <div class="flex flex-col">
                                <span class="text-[11px] text-gray-500 uppercase tracking-widest mb-1">Valid For</span>
                                <span class="text-sm font-light text-white/90">{tier.valid}</span>
                            </div>

                            <div class="flex flex-col">
                                <span class="text-[11px] text-gray-500 uppercase tracking-widest mb-1">Ideal For</span>
                                <span class="text-sm font-light text-gold/80 italic leading-relaxed">{tier.audience}</span>
                            </div>
                        </div>
                    </div>

                    <a 
                        href={tier.stripeUrl}
                        class="w-full py-4 rounded-full bg-[#0F393D] border border-[#0F393D] text-white uppercase text-[12px] font-light tracking-[0.3em] transition-all duration-300 hover:bg-white hover:text-[#0F393D] shadow-[0_0_15px_rgba(15,57,61,0.4)] hover:shadow-[0_0_25px_#ffffff] text-center no-underline flex justify-center items-center"
                    >
                        Get pass
                    </a>
                </div>
            ))}
