---
import MainLayout from '../../layouts/MainLayout.astro';

// DATA CONTROL CENTER
// Change spots to 0 to test the "Sold Out" state
const workshop1 = {
    spots: 30,
    link: "https://buy.stripe.com/your-link-here"
};

const workshop2 = {
    spots: 30, 
    link: "https://buy.stripe.com/your-link-here"
};

const workshop3 = {
    spots: 30, 
    link: "https://buy.stripe.com/your-link-here"
};
---

<MainLayout title="Workshops | Utopia Studio">
    <div class="fixed top-[-10%] left-[-10%] w-125 h-125 bg-[#0F393D] rounded-full blur-[120px] opacity-10 z-0"></div>
    <div class="fixed bottom-[10%] right-[-5%] w-100 h-100 bg-[#14b8a6] rounded-full blur-[100px] opacity-5 z-0"></div>

    <main class="relative z-10 min-h-screen max-w-6xl mx-auto px-6 py-32">
        <a href="/memberships" class="inline-flex items-center text-gray-500 hover:text-gold transition-colors mb-12 group uppercase text-[10px] tracking-[0.3em]">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 group-hover:-translate-x-1 transition-transform"><path d="m15 18-6-6 6-6"/></svg>
            Back to Passes
        </a>
        <div class="text-center mb-16 md:mb-20">
            <h1 class="text-white text-3xl md:text-4xl font-thin tracking-[0.4em] md:tracking-[0.5em] uppercase mb-4 leading-tight">
                Workshops <span class="text-gold italic">&</span> Modules
            </h1>
            <p class="text-gray-500 text-[10px] md:text-xs tracking-[0.3em] uppercase mt-12">Modules and workshops with limited availability for immersive learning</p>
        </div>

        <div class="space-y-16"> 
            <div class="group relative bg-[#0a0a0a] border border-white/5 rounded-[50px_10px_50px_10px] overflow-hidden flex flex-col lg:flex-row items-center transition-all duration-500 hover:border-gold/20 shadow-2xl">
                
                <div class="w-full lg:w-[35%] p-6 md:p-8">
                    <div class="relative w-full aspect-4/5 overflow-hidden rounded-[30px_10px_30px_10px] border border-white/10 bg-neutral-900">
                        <img src="/images/SalsaInt.png" alt="Salsa Intermediate" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
                    </div>
                </div>

                <div class="w-full lg:w-[65%] p-8 md:p-12 md:pl-4 flex flex-col justify-between">
                    <div>
                        <div class="flex flex-wrap gap-3 mb-6">
                            <span class="text-gold text-[9px] tracking-[0.2em] uppercase border border-gold/30 px-2 py-1 rounded-md">Level: Intermediate</span>
                            <span class="text-gray-400 text-[9px] tracking-[0.2em] uppercase py-1">Duration: 2 Hours (divided in 2 weeks)</span>
                        </div>
                        <h2 class="text-white text-2xl md:text-3xl font-light tracking-tight mb-4 uppercase">Salsa Fundamentals <span class="text-gold italic">ON 2</span></h2>
                        <p class="text-gray-400 font-light leading-relaxed text-sm md:text-base mb-8">Join us for an intensive deep-dive into digital composition. We will cover lighting techniques, brush customization, and industry secrets.</p>

                        <div class="grid grid-cols-2 gap-4 mb-8 border-y border-white/5 py-6">
                            <div>
                                <p class="text-gray-500 text-[8px] uppercase tracking-widest mb-1">Date</p>
                                <p class="text-white text-xs md:text-sm font-light">March 15, 2026</p>
                            </div>
                            <div>
                                <p class="text-gray-500 text-[8px] uppercase tracking-widest mb-1">Time</p>
                                <p class="text-white text-xs md:text-sm font-light">19:00 - 20:00</p>
                            </div>
                        </div>
                    </div>

                    <div class="flex flex-row items-end justify-between gap-4">
                        <div class="shrink-0">
                            {workshop1.spots > 0 && (
                                <p class="text-gold text-[10px] font-bold uppercase tracking-widest mb-2 animate-pulse">Only {workshop1.spots} Spots Left</p>
                            )}
                            <p class="text-gray-500 text-[9px] uppercase tracking-widest">Price</p>
                            <p class="text-white text-xl md:text-2xl font-light">180.00RON</p>
                        </div>
                        
                        <a 
                            href={workshop1.spots > 0 ? workshop1.link : "#"} 
                            class={`px-6 md:px-8 py-3 md:py-4 rounded-xl font-bold text-[9px] md:text-[10px] uppercase tracking-[0.2em] transition-all duration-300 text-center ${
                                workshop1.spots > 0 
                                ? "bg-white text-black hover:bg-gold hover:text-black shadow-[0_0_20px_rgba(255,255,255,0.1)]" 
                                : "bg-gray-800 text-gray-500 cursor-not-allowed border border-white/5 pointer-events-none"
                            }`}
                        >
                            {workshop1.spots > 0 ? "Book your Spot" : "Sold Out"}
                        </a>
                    </div>
                </div>
            </div>

            <div class="group relative bg-[#0a0a0a] border border-white/5 rounded-[50px_10px_50px_10px] overflow-hidden flex flex-col lg:flex-row items-center transition-all duration-500 hover:border-gold/20 shadow-2xl">
                
                <div class="w-full lg:w-[35%] p-6 md:p-8">
                    <div class="relative w-full aspect-4/5 overflow-hidden rounded-[30px_10px_30px_10px] border border-white/10 bg-neutral-900">
                        <img src="/images/SalsaAdv.png" alt="Salsa Advanced" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
                    </div>
                </div>

                <div class="w-full lg:w-[65%] p-8 md:p-12 md:pl-4 flex flex-col justify-between">
                    <div>
                        <div class="flex flex-wrap gap-3 mb-6">
                            <span class="text-gold text-[9px] tracking-[0.2em] uppercase border border-gold/30 px-2 py-1 rounded-md">Level: Intermediate-Advanced</span>
                            <span class="text-gray-400 text-[9px] tracking-[0.2em] uppercase py-1">Duration: 2 Hours (divided in 2 weeks)</span>
                        </div>
                        <h2 class="text-white text-2xl md:text-3xl font-light tracking-tight mb-4 uppercase">Flavours of<span class="text-gold italic">Salsa</span></h2>
                        <p class="text-gray-400 font-light leading-relaxed text-sm md:text-base mb-8">Refine your technique and master complex patterns in this advanced module. Perfect for those looking to reach professional excellence.</p>

                        <div class="grid grid-cols-2 gap-4 mb-8 border-y border-white/5 py-6">
                            <div>
                                <p class="text-gray-500 text-[8px] uppercase tracking-widest mb-1">Date</p>
                                <p class="text-white text-xs md:text-sm font-light">March 22, 2026</p>
                            </div>
                            <div>
                                <p class="text-gray-500 text-[8px] uppercase tracking-widest mb-1">Time</p>
                                <p class="text-white text-xs md:text-sm font-light">20:00 - 21:00</p>
                            </div>
                        </div>
                    </div>

                    <div class="flex flex-row items-end justify-between gap-4">
                        <div class="shrink-0">
                            {workshop2.spots > 0 && (
                                <p class="text-gold text-[10px] font-bold uppercase tracking-widest mb-2 animate-pulse">Only {workshop2.spots} Spots Left</p>
                            )}
                            <p class="text-gray-500 text-[9px] uppercase tracking-widest">Price</p>
                            <p class="text-white text-xl md:text-2xl font-light">180.00RON</p>
                        </div>
                        
                        <a 
                            href={workshop2.spots > 0 ? workshop2.link : "#"} 
                            class={`px-6 md:px-8 py-3 md:py-4 rounded-xl font-bold text-[9px] md:text-[10px] uppercase tracking-[0.2em] transition-all duration-300 text-center ${
                                workshop2.spots > 0 
                                ? "bg-white text-black hover:bg-gold hover:text-black shadow-[0_0_20px_rgba(255,255,255,0.1)]" 
                                : "bg-gray-800 text-gray-500 cursor-not-allowed border border-white/5 pointer-events-none"
                            }`}
                        >
                            {workshop2.spots > 0 ? "Book your Spot" : "Sold Out"}
                        </a>
                    </div>
                </div>
            </div>

            <div class="group relative bg-[#0a0a0a] border border-white/5 rounded-[50px_10px_50px_10px] overflow-hidden flex flex-col lg:flex-row items-center transition-all duration-500 hover:border-gold/20 shadow-2xl">
                
                <div class="w-full lg:w-[35%] p-6 md:p-8">
                    <div class="relative w-full aspect-4/5 overflow-hidden rounded-[30px_10px_30px_10px] border border-white/10 bg-neutral-900">
                        <img src="/images/combobanner.png" alt="Salsa Advanced" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
                    </div>
                </div>

                <div class="w-full lg:w-[65%] p-8 md:p-12 md:pl-4 flex flex-col justify-between">
                    <div>
                        <div class="flex flex-wrap gap-3 mb-6">
                            <span class="text-gold text-[9px] tracking-[0.2em] uppercase border border-gold/30 px-2 py-1 rounded-md">Level: Advanced</span>
                            <span class="text-gray-400 text-[9px] tracking-[0.2em] uppercase py-1">Duration: 4 Hours</span>
                        </div>
                        <h2 class="text-white text-2xl md:text-3xl font-light tracking-tight mb-4 uppercase">Advanced <span class="text-gold italic">Salsa</span></h2>
                        <p class="text-gray-400 font-light leading-relaxed text-sm md:text-base mb-8">Refine your technique and master complex patterns in this advanced module. Perfect for those looking to reach professional excellence.</p>

                        <div class="grid grid-cols-2 gap-4 mb-8 border-y border-white/5 py-6">
                            <div>
                                <p class="text-gray-500 text-[8px] uppercase tracking-widest mb-1">Date</p>
                                <p class="text-white text-xs md:text-sm font-light">March 22, 2026</p>
                            </div>
                            <div>
                                <p class="text-gray-500 text-[8px] uppercase tracking-widest mb-1">Time</p>
                                <p class="text-white text-xs md:text-sm font-light">19:00 - 21:00</p>
                            </div>
                        </div>
                    </div>

                    <div class="flex flex-row items-end justify-between gap-4">
                        <div class="shrink-0">
                            {workshop3.spots > 0 && (
                                <p class="text-gold text-[10px] font-bold uppercase tracking-widest mb-2 animate-pulse">Only {workshop2.spots} Spots Left</p>
                            )}
                            <p class="text-gray-500 text-[9px] uppercase tracking-widest">Price</p>
                            <p class="text-white text-xl md:text-2xl font-light">330.00RON</p>
                        </div>
                        
                        <a 
                            href={workshop3.spots > 0 ? workshop3.link : "#"} 
                            class={`px-6 md:px-8 py-3 md:py-4 rounded-xl font-bold text-[9px] md:text-[10px] uppercase tracking-[0.2em] transition-all duration-300 text-center ${
                                workshop3.spots > 0 
                                ? "bg-white text-black hover:bg-gold hover:text-black shadow-[0_0_20px_rgba(255,255,255,0.1)]" 
                                : "bg-gray-800 text-gray-500 cursor-not-allowed border border-white/5 pointer-events-none"
                            }`}
                        >
                            {workshop3.spots > 0 ? "Book your Spot" : "Sold Out"}
                        </a>
                    </div>
                </div>
            </div>
        </div>    
    </main>
</MainLayout>