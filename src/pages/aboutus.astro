---

<MainLayout title="About Us | Utopia">

    <main class="max-w-6xl mx-auto px-6 py-20">
        <a href="/home" class="inline-flex items-center text-gray-500 hover:text-gold transition-colors mb-16 group uppercase text-[10px] tracking-[0.3em]">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 group-hover:-translate-x-1 transition-transform"><path d="m15 18-6-6 6-6"/></svg>
            Back Home
        </a>

        <section class="text-center mb-32">
            <h1 class="text-2xl md:text-4xl font-thin tracking-[0.4em] uppercase text-white mb-12">
                The <span class="text-gold italic font-light">Utopia</span> Vision
            </h1>
            <p class="text-gold uppercase tracking-[0.5em] text-[12px] font-light italic mb-26">"WE FELT IT SO WE BUILT IT"</p>
            <div class="h-px w-24 bg-[#0F393D] mx-auto opacity-60"></div>
        </section>

        <section class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-40">
            {values.map((val) => (
                <div class="border-l border-[#0F393D]/40 pl-8 py-4 group hover:border-gold transition-colors duration-500">
                    <h3 class="text-white uppercase tracking-widest text-lg font-light mb-4">{val.title}</h3>
                    <p class="text-gray-400 font-light text-sm leading-loose italic">{val.desc}</p>
                </div>
            ))}
        </section>

        <section>
            <h2 class="text-2xl md:text-3xl font-thin tracking-[0.3em] uppercase text-white mb-20 text-center">
                Our <span class="text-gold italic">Instructors</span>
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-16">
                {team.map((member) => (
                    <div class="group">
                        <div class="relative aspect-square mb-8 overflow-hidden rounded-[40px_5px_40px_5px] border border-white/10 transition-all duration-700 group-hover:border-gold/50 group-hover:shadow-[0_0_30px_rgba(212,175,55,0.2)]">
                            <img 
                                src={member.image} 
                                alt={member.name} 
                                class="w-full h-full object-cover grayscale transition-all duration-1000 group-hover:grayscale-0 group-hover:scale-105"
                            />
                            <div class="absolute inset-0 bg-linear-to-t from-black via-transparent to-transparent opacity-60"></div>
                        </div>

                        <h4 class="text-white text-xl font-light tracking-wide mb-1">{member.name}</h4>
                        <p class="text-gold text-[12px] uppercase tracking-[0.2em] mb-4 italic">{member.role}</p>
                        
                        <div class="relative">
                            <p class="bio-text text-gray-400 text-base font-light leading-loose line-clamp-4 transition-all duration-500">
                                {member.bio}
                            </p>
                            <button class="read-more-btn mt-3 text-gold text-[10px] uppercase tracking-[0.3em] font-light hover:text-white transition-colors">
                                Read More +
                            </button>
                        </div>
                    </div>
                ))}
            </div>
        </section>
    </main>
</MainLayout>

<script>
  const buttons = document.querySelectorAll('.read-more-btn');

  buttons.forEach(button => {
    button.addEventListener('click', () => {
      // Find the paragraph that is right before this button
      const textElement = button.previousElementSibling;

      if (textElement) {
        const isExpanded = textElement.classList.contains('line-clamp-none');

        if (isExpanded) {
          textElement.classList.remove('line-clamp-none');
          textElement.classList.add('line-clamp-4');
          button.textContent = 'Read More +';
        } else {
          textElement.classList.remove('line-clamp-4');
          textElement.classList.add('line-clamp-none');
          button.textContent = 'Read Less -';
        }
      }
    });
  });
</script>