---
import Navigation from '../components/Navigation.astro';
import '../styles/global.css';

const faqs = [
  { 
    question: "Do I need prior experience to join a class?", 
    answer: "Not at all! We offer classes ranging from 'Absolute Beginner' to 'Advanced Pro'. Our instructors are trained to adapt to your level." 
  },
  { 
    question: "What should I bring to my first class?", 
    answer: "Comfortable clothing is key. For dance, bring water, a towel and your best mood."
  },
  { 
    question: "Are there monthly memberships available?", 
    answer: "Yes, we offer flexible memberships including class passes, monthly or unlimited access, professional studio rental packages, and more." 
  },
  { 
    question: "How do I cancel or reschedule a booked service?", 
    answer: "Once you book a service you will receive a confirmation message or email with rules, terms and conditions that apply for all, together with the next steps to follow." 
  },
  { 
    question: "How do I book a photoshoot or a videoshoot?", 
    answer: "You can send us a request of availabilty with our form, and we will contact you with the most suitable dates according to your needs as soon as possible." 
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Q&A | Utopia Studio</title>
</head>
<body class="bg-black text-white font-[Montserrat]">

    <Navigation />

    <main class="relative min-h-screen max-w-6xl mx-auto px-6 py-20 flex flex-col">
        <a href="/home" class="inline-flex items-center text-gray-500 hover:text-gold transition-colors mb-12 group uppercase text-[10px] tracking-[0.3em]">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 group-hover:-translate-x-1 transition-transform"><path d="m15 18-6-6 6-6"/></svg>
            Back Home
        </a>
        
        <h2 class="text-center font-[Montserrat] font-thin tracking-[0.4em] uppercase text-gold opacity-90 mb-20 text-2xl md:text-3xl">
            Questions & <span class="italic">Answers</span>
        </h2>

        <div class="w-full bg-[#1a1a1a] rounded-[50px_10px_50px_10px] flex flex-col lg:flex-row items-stretch overflow-hidden border border-white/5 transition-all duration-500 hover:-translate-y-2 shadow-[0_0_20px_rgba(15,57,61,0.3)] hover:shadow-[0_0_40px_rgba(20,184,166,0.3),0_0_80px_rgba(15,57,61,0.5)]">
            
            <div class="w-full lg:w-1/3 bg-[#0F393D]/20 flex flex-col items-center border-r border-white/5 overflow-hidden">
    
                    <div class="w-full p-6 lg:p-8 overflow-hidden border-b border-white/5">
                        <img 
                            src="/qaphoto.png" 
                            alt="Utopia Studio Environment" 
                            class="w-full h-full object-cover transition-all duration-700"
                        />
                    </div>

                    <div class="p-10 flex flex-col items-center text-center mt-auto mb-auto">
                        <div class="text-gold mb-6 opacity-80">
                            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"><path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path></svg>
                        </div>
                        <h3 class="font-bebas text-3xl text-white tracking-widest uppercase mb-4">
                            Expert <span class="text-gold">Support</span>
                        </h3>
                        <p class="text-gray-400 font-light text-xs leading-relaxed max-w-[200px\]">
                            Can't find what you're looking for? Reach out to our team.
                        </p>
                    </div>
                </div>

            <div class="w-full lg:w-2/3 p-8 md:p-16 space-y-10">
                {faqs.map((faq) => (
                    <div class="group">
                        <h4 class="text-gold text-xs uppercase tracking-[0.2em] mb-2 transition-colors group-hover:text-teal-400">Question</h4>
                        <p class="text-white text-lg font-medium mb-3">{faq.question}</p>
                        <p class="text-gray-400 font-light leading-relaxed text-sm lg:text-base border-l border-gold/20 pl-4">
                            {faq.answer}
                        </p>
                    </div>
                ))}
            </div>
        </div>

    </main>

</body>
</html>