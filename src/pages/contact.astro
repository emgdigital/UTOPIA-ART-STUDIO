---
import Navigation from '../components/Navigation.astro';
import '../styles/global.css';

const schedule = [
  { time: "09:00 AM", class: "Contemporary Dance", instructor: "Elena R." },
  { time: "11:30 AM", class: "Portrait Photography", instructor: "Marcus V." },
  { time: "05:00 PM", class: "Hip Hop Fundamentals", instructor: "Jordan K." },
  { time: "07:00 PM", class: "Video Editing Workshop", instructor: "Sarah L." },
];
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
    <head>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>The Studio | Welcome</title>
    </head>
<body class="bg-black text-white font-[Montserrat]">

    <Navigation />

    <main id="contact-content" class="min-h-screen max-w-6xl mx-auto px-6 py-20 flex flex-col items-center">
        
        <h2 class="text-center font-[Montserrat] font-thin tracking-[0.4em] uppercase text-gold opacity-90 mb-20 text-1xl md:text-2xl lg:text-3xl">
            Contact <span class="italic">Us</span>
        </h2>

        <div class="w-full bg-[#1a1a1a] rounded-[50px_10px_50px_10px] flex flex-col lg:flex-row items-center overflow-hidden border border-white/5 transition-all duration-500 hover:-translate-y-2 shadow-[0_0_20px_rgba(15,57,61,0.3)] hover:shadow-[0_0_40px_rgba(20,184,166,0.3),0_0_80px_rgba(15,57,61,0.5)]">
            
            <div class="w-full md:w-1/3 p-10 flex justify-center">
                <div class="rounded-[40px_10px_40px_10px] overflow-hidden shadow-2xl w-full max-w-[300px\]">
                    <img src="/contactPhoto1.png" alt="Contact Utopia" class="w-full h-auto object-contain" />
                </div>
            </div> 

            <div class="w-full md:w-2/3 p-8 md:p-16 flex flex-col justify-center">
                <h1 class="font-[Montserrat] font-light text-1xl lg:text-2xl tracking-tight mb-8 uppercase">
                    HOW TO GET IN <span class="text-gold font-medium italic">TOUCH?</span>
                </h1>

                <div class="space-y-8">
                    <div class="flex items-center gap-5 group">
                        <div class="text-gold bg-gold/10 p-4 rounded-full transition-colors group-hover:bg-gold/20">
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l2.28-2.28a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
                        </div>
                        <div class="flex flex-col">
                            <span class="text-gold text-xs uppercase tracking-[0.2em] mb-1">Call Us</span>
                            <a href="tel:+1234567890" class="text-white text-sm font-light hover:text-gold transition-colors">+1 (234) 567-890</a>
                        </div>
                    </div>

                    <div class="flex items-center gap-5 group">
                        <div class="text-gold bg-gold/10 p-4 rounded-full transition-colors group-hover:bg-gold/20">
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                        </div>
                        <div class="flex flex-col">
                            <span class="text-gold text-xs uppercase tracking-[0.2em] mb-1">Email</span>
                            <a href="mailto:hello@utopiastudio.com" class="text-white text-sm font-light hover:text-gold transition-colors">hello@utopiastudio.com</a>
                        </div>
                    </div>

                    <div class="flex items-center gap-5 group">
                        <div class="text-gold bg-gold/10 p-4 rounded-full transition-colors group-hover:bg-gold/20">
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                        </div>
                        <div class="flex flex-col">
                            <span class="text-gold text-xs uppercase tracking-[0.2em] mb-1">Location</span>
                            <a href="https://maps.google.com" target="_blank" class="text-white text-sm font-light hover:text-gold transition-colors">123 Creative Way, Art City</a>
                        </div>
                    </div>

                    <div class="flex items-center gap-5 group">
                        <div class="text-gold bg-gold/10 p-4 rounded-full transition-colors group-hover:bg-gold/20">
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
                        </div>
                        <div class="flex flex-col">
                            <span class="text-gold text-xs uppercase tracking-[0.2em] mb-1">Opening Hours</span>
                            <p class="text-gray-400 font-light text-sm leading-tight">Mon — Fri: 09:00 - 21:00</p>
                            <p class="text-gray-400 font-light text-sm leading-tight">Sat — Sun: 10:00 - 18:00</p>
                        </div>
                    </div>
                </div>
                              
    </main>

</body>
</html>