---
import MainLayout from '../layouts/MainLayout.astro';
import '../styles/global.css';
---

<MainLayout title="Utopia Studio | Welcome" showNav={false}>
    
    <section class="relative z-10 min-h-screen flex flex-col items-center justify-center px-6">
        <div class="mb-8 w-full max-w-none flex justify-center transition-all duration-1000 animate-in fade-in zoom-in">
            <img src="/MainLogo.png" alt="Studio Logo" class="w-[60vw] md:w-162.5 h-auto" />
        </div>

        <div class="mb-10 group flex flex-col items-center w-full">
            <a href="https://www.instagram.com/utopia.artstudio" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center gap-3 text-gray-400 transition-all duration-500 cursor-pointer w-full text-center px-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="group-hover:text-gold group-hover:rotate-12 transition-transform duration-300 shrink-0">
                    <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                    <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
                </svg>
                <span class="text-[9px] md:text-[10px] uppercase tracking-[0.3em] md:tracking-[0.4em] font-light">
                    check our social media at 
                    <span class="text-white font-bold group-hover:text-gold transition-all duration-300 ml-1">@utopia.artstudio</span>
                </span>
            </a>
        </div>

        <div class="text-center">
            <h1 class="text-sm md:text-lg font-thin tracking-[0.3em] uppercase text-white mb-2">
                Welcome to your <span class="text-gold italic">new space</span>
            </h1>
            <div class="h-px w-24 bg-[#0F393D] mx-auto mt-6 opacity-50"></div>
        </div>

        <div class="mt-12">
             <a href="/home" class="inline-block bg-[#0F393D] text-white px-10 py-3 rounded-full font-light italic text-xs tracking-[0.2em] transition-all duration-300 hover:bg-white hover:text-[#0F393D] shadow-[0_0_15px_rgba(15,57,61,0.4)]">
             Access here
           </a>
        </div>
    </section>

    <div id="cursor" class="fixed w-8 h-8 border border-gold rounded-full pointer-events-none z-9999 transition-transform duration-100 ease-out mix-blend-difference hidden md:block"></div>
</MainLayout>

<script>
    const cursor = document.getElementById('cursor') as HTMLElement;
    document.addEventListener('mousemove', (e) => {
        if(cursor) {
            cursor.style.transform = `translate(${e.clientX - 16}px, ${e.clientY - 16}px)`;
        }
    });

    const links = document.querySelectorAll('a, button');
    links.forEach(link => {
        link.addEventListener('mouseenter', () => {
            if(cursor) cursor.style.transform += ' scale(2)';
        });
        link.addEventListener('mouseleave', () => {
            if(cursor) cursor.style.transform = cursor.style.transform.replace(' scale(2)', '');
        });
    });
</script>